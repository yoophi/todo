  "definitions": {
    "Id": {
      "type": "integer",
      "format": "int64"
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "email": {
          "type": "string"
        }
      },
      "xml": {
        "name": "User"
      }
    },
    "Todo": {
      "type": "object",
      "required": [
        "title",
        "is_completed"
      ],
      "properties": {
        "id": {
          "type": "integer",
          "format": "int64"
        },
        "title": {
          "type": "string"
        },
        "priority": {
          "type": "integer"
        },
        "is_completed": {
          "type": "boolean",
          "default": false
        },
        "_links": {
          "type": "object",
          "properties": {
            "collection": {
              "type": "string"
            },
            "self": {
              "type": "string"
            }
          }
        }
      },
      "xml": {
        "name": "Pet"
      }
    },
    "ApiResponse": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "type": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "securityDefinitions": {
    "petstore_auth": {
      "type": "oauth2",
      "authorizationUrl": "http://localhost:5000/api/v1.0/oauth/authorize",
      "flow": "implicit",
      "scopes": {
        "email": "read your pets"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "externalDocs": {
    "description": "Find out more about Swagger",
