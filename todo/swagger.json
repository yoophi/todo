              "$ref": "#/definitions/User"
            }
          }
        },
        "security": [
          {
            "petstore_auth": [
              "email"
            ]
          }
        ]
      }
    },
    "/todo/{todo-id}": {
      "parameters": [
        {
          "name": "todo-id",
          "description": "Todo ID",
          "in": "path",
          "type": "integer",
          "required": true
        }
      ],
      "get": {
        "tags": [
          "todo"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "todo"
        ],
        "security": [
          {
            "petstore_auth": [
              "email"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "result": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "todo"
        ],
        "security": [
